<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Paths to the libraries that contain device specific key handlers -->
    <string-array name="config_deviceKeyHandlerLibs" translatable="false">
        <item>/system_ext/priv-app/TouchGestures/TouchGestures.apk</item>
        <item>/system_ext/priv-app/OnePlusSettings/OnePlusSettings.apk</item>
    </string-array>

    <!-- Names of the key handler classes -->
    <string-array name="config_deviceKeyHandlerClasses" translatable="false">
        <item>com.android.touch.gestures.KeyHandler</item>
        <item>org.aosp.device.OnePlusSettings.Services.KeyHandler</item>
    </string-array>

    <!-- The location of the devices physical tri state switch
         0: Left side
         1: Right side -->
    <integer name="config_alertSliderLocation">1</integer>

    <!-- Whether device has physical tri state switch -->
    <bool name="config_hasAlertSlider">true</bool>

    <!-- Whether device has warp charging support -->
    <bool name="config_hasWarpCharger">true</bool>

    <!-- NightLight FOD -->
    <bool name="disable_fod_night_light">true</bool>

    <!-- If true, the display will be shifted around in ambient mode. -->
    <bool name="config_enableBurnInProtection">true</bool>

    <!-- Defines custom Vendor sensor for pocket detection. -->
    <string name="config_pocketJudgeVendorSensorName">oneplus.sensor.pocket</string>

    <!-- Flag indicating whether we should enable the adaptive sleep.-->
    <bool name="config_adaptive_sleep_available">true</bool>

     <!-- Package name of a telephony-related system app, such as an IMS service.
         Exempted from privacy indicators. -->
     <string name="config_systemTelephonyPackage" translatable="false">com.qualcomm.qti.cne</string>

    <!-- Whether to force enable multi resolution configuration for camera -->
    <bool name="config_forceMultiResolution">true</bool>
    
     <!-- How long it takes for the HW to start illuminating after the illumination is requested. -->
    <integer name="config_udfps_illumination_transition_ms">0</integer>
    
    <!-- Wheter device supports an gaming mode profiles -->
    <bool name="config_gamingmode_performance">true</bool>

    <!-- Screen off delay -->
    <integer name="config_screen_off_delay">0</integer>
    
   <!-- Enable video pause workaround when enabling/disabling the camera. -->
     <bool name="config_useVideoPauseWorkaround">true</bool>
</resources>
